<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/not_use_2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/logo" />
        <TextView
            android:layout_gravity="center"
           android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="WELLCOME TO SMARTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/not_use_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fontchudao"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"

            android:text="Username"/>

        <EditText
            android:id="@+id/ed_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_textfield"
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginBottom="10dp"
            android:hint="username"
            android:fontFamily="@font/fontchudao"
            android:layout_marginTop="5dp"
            android:textColor="#AE000000"
            android:textColorHint="#CDCBCB"
            android:textSize="15sp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_below="@+id/not_use_txt2"/>
        <TextView
            android:id="@+id/not_use_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fontchudao"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:text="Password"
            android:layout_below="@+id/ed_username"/>
        <EditText
            android:id="@+id/ed_passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/not_use_txt3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:fontFamily="@font/fontchudao"
            android:textSize="15sp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:hint="password"
            android:textColor="#AE000000"
            android:textColorHint="#CDCBCB"
            android:background="@drawable/custom_textfield"
            tools:ignore="SpeakableTextPresentCheck"
            />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save account"
            android:layout_below="@+id/ed_passwd"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/fontchudao"
            android:textColor="@color/bg_button"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="Login"
            android:layout_below="@+id/checkBox"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/fontchudao"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/btn_login"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fontchudao"
                android:text="Donâ€™t have a account ?"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/fontchudao"
                android:text=" Sign up"
                android:textColor="@color/bg_button"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
    </LinearLayout>
</ScrollView>